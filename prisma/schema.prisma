generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id            String   @id @default(uuid())
  name          String
  description   String
  price         Float
  images        String[] 
  
  // Relationships
  category      Category @relation(fields: [categoryId], references: [id])
  categoryId    String
  brand         Brand    @relation(fields: [brandId], references: [id])
  brandId       String
  
  // Specs specifics
  frameShape    String   
  frameMaterial String   
  gender        String   
  color         String
  
  stock         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Category {
  id       String    @id @default(uuid())
  name     String    
  products Product[]
}

model Brand {
  id       String    @id @default(uuid())
  name     String    
  products Product[]
}

model Appointment {
  id        String   @id @default(uuid())
  name      String
  phone     String
  email     String
  date      DateTime
  time      String
  status    String   @default("pending")
}