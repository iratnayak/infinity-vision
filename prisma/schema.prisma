generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id            String   @id @default(uuid())
  name          String
  description   String
  price         Float
  images        String[] 
  
  // Specs specifics
  frameShape    String   
  frameMaterial String    
  color         String

  // Specsavers logic
  type          String   // e.g., Designer, Blue light, Safety
  gender        String   // e.g., Men, Women, Young
  isDesigner    Boolean  @default(false)
  isBlueLight   Boolean  @default(false)
  
  // Relationships
  // 1. Category (Glasses, Sunglasses, Contact Lenses)
  category      Category @relation(fields: [categoryId], references: [id])
  categoryId    String

  // 2. Brand (Ray-Ban, Oakley, etc.)
  brand         Brand    @relation(fields: [brandId], references: [id])
  brandId       String
  
  stock         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Category {
  id       String    @id @default(uuid())
  name     String    // e.g., Glasses, Sunglasses
  products Product[]
}

model Brand {
  id       String    @id @default(uuid())
  name     String    
  products Product[]
}

model Appointment {
  id        String   @id @default(uuid())
  name      String
  phone     String
  email     String
  date      DateTime
  time      String
  status    String   @default("pending")
}